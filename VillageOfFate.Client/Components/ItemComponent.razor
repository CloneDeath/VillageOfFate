@using VillageOfFate.WebModels
<div class="item">
    <img src="data:image/png;base64,@Item.Base64Image" alt="" width="50" height="50"/>
    <div>
        <div>@Item.Name x @Item.Quantity</div>
        <div>@Item.Description</div>
    </div>
</div>

@code {
    [Parameter] public required WebItem Item { get; set; }
}